#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>

int main() {
	
	setlocale(LC_ALL, "portugues");
	
    float raio, area;

    printf("Digite o raio do círculo: ");
    scanf("%f", &raio);

    area = M_PI * pow(raio, 2);

    printf("A área do círculo é: %.2f\n", area);

    return 0;
}
